# API
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
TRUST_PROXY=false
WORKERS=1

# CORS
CORS_ORIGINS=*

# Minecraft
MC_SERVER_HOST=your-server.example.com
MC_SERVER_PORT=25565

# Player Statistics DB (mounted at /app/data)
PLAYER_STATS_DB_PATH=./data/player-statistics.db

# SFTP (choose password or private key)
SFTP_HOST=sftp.example.com
SFTP_PORT=22
SFTP_USERNAME=your-user
SFTP_PASSWORD=
# Optional: use private key instead of password
SFTP_PRIVATE_KEY_PATH=
# Optional MD5 fingerprint (with or without colons)
SFTP_HOST_KEY_FINGERPRINT=
SFTP_REMOTE_DB_PATH=/path/to/player-statistics.db
SFTP_DOWNLOAD_INTERVAL_SECONDS=300

# Rate Limiting
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_REFRESH_STATS=5/hour

# Bot UUIDs (UUIDs known as bots like Steve and Alex)
BOT_UUIDS=8667ba71-b85a-4004-af54-457a9734eed7,ec561538-f3fd-461d-aff5-086b22154bce