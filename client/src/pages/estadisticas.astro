---
import Layout from '../layouts/Layout.astro';
import PlayerStats from '../components/PlayerStats';

const title = 'Estadísticas de Jugadores';
---

<Layout title={title}>
  <section class="space-y-6">
    <div class="flex items-end justify-between">
      <div>
        <h2 class="text-2xl font-bold tracking-tight">{title}</h2>
        <p class="mt-1 text-sm text-gray-400">Explora kills, muertes, bloques minados y más.</p>
      </div>
    </div>

    <div class="rounded-2xl border border-gray-800 bg-gray-900/40 p-4">
      <PlayerStats client:load />
    </div>
  </section>
</Layout>


